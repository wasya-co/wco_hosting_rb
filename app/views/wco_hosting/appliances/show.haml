
.appliances-edit.maxwidth
  %h5 Appliance `#{@appliance}`

  %ul
    %li
      %label.bold Leadset:
      = link_to @appliance.leadset, wco.leadset_path(@appliance.leadset)
    %li
      %label.bold Env:
      = @appliance.environment
    %li
      %label.bold Tmpl:
      = @appliance.appliance_tmpl

  .logs
    %h5 Logs
    %ul
      - @appliance.logs.each do |log|
        %li
          = log.created_at
          %b= log.label
          %pre.descr= log.message

  = @appliance.inspect


